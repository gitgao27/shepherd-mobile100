<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">



    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dp"
        android:background="#ffcd2626"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_city_manage"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:src="@drawable/title_city" />

        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1.0dp"
            android:layout_height="40.0dp"
            android:layout_marginTop="2.0dp"
            android:layout_toRightOf="@id/title_city_manage"
            android:background="#A71717" />

        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="北京天气"
            android:textColor="#ffffffff"
            android:textSize="22.0sp" />

        <ImageView
            android:id="@+id/title_update_btn"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@drawable/title_update" />

        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_toLeftOf="@id/title_update_btn"
            android:src="@drawable/title_share" />

        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/beijing_image"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/biz_plugin_weather_shenzhen_bg"/>

    <RelativeLayout
        android:id="@+id/UI_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title">

        <TextView
            android:id="@+id/blankspace"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blankspace"
            android:layout_marginLeft="20.0dp"
            android:text="北京"
            android:textColor="#ffcd2626"
            android:textSize="60sp"/>

         <ImageView
             android:id="@+id/right_top_image"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/blankspace"
             android:layout_alignEnd="@id/city_name"
             android:layout_marginRight="20dp"
             android:src="@drawable/biz_plugin_weather_0_50"/>

        <TextView
            android:id="@+id/fabushijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/city_name"
            android:layout_marginLeft="20.0dp"
            android:textColor="#ffcd2626"
            android:textSize="25sp"
            android:text="今天18:25发布"/>

        <TextView
            android:id="@+id/shidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fabushijian"
            android:layout_marginLeft="20.0dp"
            android:textColor="#ffcd2626"
            android:textSize="25sp"
            android:text="湿度：57%"
            />

        <TextView
            android:id="@+id/pm2.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/right_top_image"
            android:layout_below="@id/blankspace"
            android:layout_marginRight="15dp"
            android:textColor="#ffcd2626"
            android:textSize="25sp"
            android:text=" PM2.5"/>

        <TextView
            android:id="@+id/pm2.5zhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pm2.5"
            android:layout_toLeftOf="@id/right_top_image"
            android:layout_marginRight="15dp"
            android:textColor="#ffcd2626"
            android:textSize="35sp"
            android:text="100"/>

        <TextView
            android:id="@+id/wuranchengdu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/right_top_image"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="#ffcd2626"
            android:textSize="30sp"
            android:text="重度污染" />


     </RelativeLayout>

    <RelativeLayout
        android:id="@+id/UI_layout2"
        android:layout_below="@id/UI_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/yinqing_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="5dp"
        android:src="@drawable/biz_plugin_weather_qing"
        />

        <TextView
            android:id="@+id/xingqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textColor="#ffcd2626"
            android:textSize="30sp"
            android:text="今天 星期三"/>

        <TextView
            android:id="@+id/wendu"
            android:layout_below="@id/xingqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textColor="#ffcd2626"
            android:textSize="30sp"
            android:text="℃7—℃2-"/>

        <TextView
            android:id="@+id/yinqing"
            android:layout_below="@id/wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textColor="#ffcd2626"
            android:textSize="30sp"
            android:text="多云转晴"/>

        <TextView
            android:id="@+id/fengli"
            android:layout_below="@id/yinqing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textColor="#ffcd2626"
            android:textSize="30sp"
            android:text="微风"/>



    </RelativeLayout>


</RelativeLayout>
